<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/locus_background"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingBottom="30dp"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:background="@drawable/locus_logo"
                android:padding="16dp" />

            <EditText
                android:id="@+id/etUsernameR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="10"
                android:hint="Username, ID"
                android:drawableLeft="@drawable/ic_person_outline_red_400_24dp"
                android:textColorHint="#696969"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/etPasswordR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="10"
                android:hint="Password"
                android:textColorHint="#696969"
                android:drawableLeft="@drawable/ic_lock_red_400_24dp"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="13dp"
                tools:layout_editor_absoluteY="146dp"/>

            <EditText
                android:id="@+id/etNameR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="10"
                android:hint="Name"
                android:textColorHint="#696969"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/etEmailR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="10"
                android:hint="Email"
                android:textColorHint="#696969"
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="206dp"/>

            <EditText
                android:id="@+id/etPhoneNumberR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="10"
                android:hint="Phone Number"
                android:textColorHint="#696969"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="206dp"/>

            <EditText
                android:id="@+id/Display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="10"
                android:hint=""
                android:textColorHint="#696969"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="206dp"/>

            <Button
                android:id="@+id/bRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login"
                android:clickable="true"
                android:padding="16dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#79A78C"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="266dp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>