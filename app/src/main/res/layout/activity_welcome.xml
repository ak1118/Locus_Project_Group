<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:orientation="vertical"
    android:background="@drawable/welcome_black">


    <LinearLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/welcome_color">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@drawable/locus_logo"
            android:padding="16dp" />

        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Locus"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:layout_marginTop="165dp"
            android:layout_gravity="center"
            android:textColor="@color/colorHint"
            android:background="@drawable/background_login"
            android:textSize="15sp"
            android:text="LogIn"/>

        <Button
            android:id="@+id/buttonToJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="41dp"
            android:paddingRight="41dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/background_login_three"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="Join"/>

    </LinearLayout>

</LinearLayout>